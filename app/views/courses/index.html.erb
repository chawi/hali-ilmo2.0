<br />
<div>
	<% if flash[:notice] %>
		<div class="notice">
			<%= flash[:notice] %>
		</div>
	<% end %>

	<% if flash[:warning] %>
		<div class="warning">
			<%= flash[:warning] %>
		</div>
	<% end %>

	<br />
	<p class="underline bold">Kurssilistaus</p>
	<ul>
		<% @courses.each do |course| %>
			<li>
				<%= link_to course.name, course_path(course) %>
			</li>
		<% end %>
	</ul>
</div>
